# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/diginvoice-erp

# For MongoDB Atlas (cloud), use this format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/diginvoice-erp?retryWrites=true&w=majority

# ==========================================
# JWT CONFIGURATION
# ==========================================

# JWT Secret (Change this to a random string in production - minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT Token Expiry (7 days for access token)
JWT_EXPIRY=7d

# Refresh Token Expiry (30 days)
JWT_REFRESH_EXPIRY=30d

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Application Name
NEXT_PUBLIC_APP_NAME=DigInvoice ERP

# Application URL (used in emails and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment (development, production, test)
NODE_ENV=development

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email Provider (smtp, sendgrid, ses)
EMAIL_PROVIDER=smtp

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (if using SendGrid)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key

# AWS SES Configuration (if using AWS SES)
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY=your-access-key
# AWS_SES_SECRET_KEY=your-secret-key

# Email From Address
EMAIL_FROM=noreply@diginvoice.com
EMAIL_FROM_NAME=DigInvoice ERP

# ==========================================
# FBR DIGITAL INVOICING API
# ==========================================

# FBR API Base URL
NEXT_PUBLIC_FBR_API_BASE_URL=https://gw.fbr.gov.pk

# Note: FBR API Token is stored in localStorage after user authentication
# and is managed through the application's FBR settings page

# ==========================================
# OPTIONAL CONFIGURATIONS
# ==========================================

# Session Configuration
# SESSION_EXPIRY=7d

# File Upload Configuration
# MAX_FILE_SIZE=5242880  # 5MB in bytes
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
# RATE_LIMIT_WINDOW=15m
# RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# DEVELOPMENT ONLY
# ==========================================

# Enable debug logging
# DEBUG=true

# Disable email sending in development (logs to console instead)
# EMAIL_DEBUG_MODE=true
